<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<statisticConfiguration>
    <name>area_admin_classified_small</name>
    <title>Low resolution forest change in admin areas</title>
    <description>Compute the area for the administrative areas. Low resolutions raster.</description>

    <topic>rdc</topic>
    <topic>area</topic>
    <topic>administrative</topic>
    <topic>forest</topic>

    <stats>
        <stat>SUM</stat>
    </stats>

    <deferredMode>false</deferredMode>

    <dataLayer>
        <file>/home/geosol/data/unredd/rdc_admin_area_small.tif</file>
    </dataLayer>

    <classificationLayer zonal="true">
        <file>/home/geosol/data/unredd/rdc_limite_administrative_small.tif</file>
        <nodata>65535</nodata>
    </classificationLayer>

    <classificationLayer>
        <file>/home/geosol/data/unredd/forest_classification_small.tif</file>
        <nodata>0.0</nodata>
        <pivot>
            <value>1.0</value>
            <value>2.0</value>
            <value>3.0</value>
            <value>4.0</value>
            <value>5.0</value>
            <value>6.0</value>
        </pivot>
    </classificationLayer>


    <output>
        <format>CSV</format>
        <separator>;</separator>
        <missingValue>0</missingValue>
        <NaNValue>-1</NaNValue>
        <file>area_admin_classified_small.csv</file>
    </output>

</statisticConfiguration>
